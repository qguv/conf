[user]
	name = Quint Guvernator
	email = quint@guvernator.net
[grep]
	extendRegexp = true
	lineNumber = true
[init]
	templatedir = ~/.config/git/template
[sendemail]
	from = Quint Guvernator <quint@guvernator.net>
	smtpserver = mail.privateemail.com
	smtpuser = quint@guvernator.net
	chainreplyto = false
	smtpserverport = 587
	smtpencryption = tls
	confirm = auto
[alias]
	# Get the child commit of the current commit.
	# Use $1 instead of 'HEAD' if given. Use $2 instead of curent branch if given.
	child = "!bash -c 'git log --format=%H --reverse --ancestry-path ${1:-HEAD}..${2:\"$(git rev-parse --abbrev-ref HEAD)\"} | head -1' -"

	# For the current (or specified) commit-ish, get the all children
	children = "!bash -c 'c=${1:-HEAD}; set -- $(git rev-list --all --not \"$c\"^@ --children | grep $(git rev-parse \"$c\") ); shift; echo $*' -"

	co = checkout
	cm = commit
	ff = merge --ff-only
	lo = log --oneline
	g = grep --break --heading --line-number
	se = send-email --annotate --cover-letter --signoff
	ignore = update-index --assume-unchanged
	track = update-index --no-assume-unchanged
	ignored = "!f() { git ls-files -v | egrep '^[a-z]' | cut -d' ' -f2-; }; f"
	flog = log --decorate --notes --stat
	ls = ls-tree --name-only HEAD
	graph = log --graph --decorate --pretty=oneline --abbrev-commit
	refgraph = log --graph --decorate --pretty=oneline --abbrev-commit --simplify-by-decoration --simplify-merges
	whoops = commit --amend --no-edit
	sub-add = "!f() { git subtree add --prefix $2 $1 master --squash; }; f"
	sub-update = "!f() { git subtree pull --prefix $2 $1 master --squash; }; f"
	ignored = "!f() { git ls-files -v | grep '^h'; }; f"
[interactive]
	singlekey = true
[http]
	postBuffer = 524288000
[core]
	autocrlf = input
	editor = nvim
	abbrev = 12
[push]
	default = simple
[hub]
	protocol = ssh
[credential]
	helper = cache
[pretty]
	fixes = Fixes: %h (\"%s\")
[merge]
	tool = meld
