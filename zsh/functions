#!/usr/bin/zsh
# zsh custom functions

# Combines mkdir, cd, pwd
function mkdircd () {
    mkdir -p "$@" &&
    eval cd "\"\$$#\"" &&
    eval echo "Switching to $(pwd)...";
}

# Quickly edit programs in your $PATH
function editex () {
    eval "$EDITOR" "$(which $1)" ${@:2}
}

# Run a locally hosted godoc.org at given port
function hostgodoc () {
    if [ -z $1 ]; then
        PORT="6060"
    else
        PORT="$1"
    fi

    eval "godoc" "-http=:$PORT"
}
