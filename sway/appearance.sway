smart_gaps on
gaps inner 10

smart_borders on
default_border pixel 5

# `man 5 sway-bar`
bar {
	position top

	status_command i3status
	separator_symbol " | "

	mode hide
	modifier Mod1
	colors {
		statusline #ffffff
		background #323232
		inactive_workspace #32323200 #32323200 #5c5c5c
	}
}

output eDP-1 {
	scale 1.5
	mode 3200x1800@59.695999Hz
	pos 0 528
}

output HDMI-A-2 {
	scale 1.25
	mode 3840x2160@30Hz
	pos 2133 0
}

output * {
	background $wp fill #222222
}
