smart_gaps on
gaps inner 10

smart_borders on
default_border pixel 5

font "pango:$font"
for_window [title="." app_id="."] title_format "<b>%title</b> (%app_id)"

# `man 5 sway-bar`
bar {
	position top
	font "pango:Noto Sans ExtraCondensed ExtraLight"

	status_command i3status
	separator_symbol " Â· "

	mode hide
	modifier Mod1
	colors {
		statusline #ffffff
		background #323232
		inactive_workspace #32323200 #32323200 #5c5c5c
	}
}
