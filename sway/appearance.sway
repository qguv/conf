smart_gaps on
gaps inner 10

smart_borders on
default_border pixel 5

# `man 5 sway-bar`
bar {
	position top

	status_command i3status
	separator_symbol " | "

	mode hide
	modifier Mod1
	colors {
		statusline #ffffff
		background #323232
		inactive_workspace #32323200 #32323200 #5c5c5c
	}
}

output * {
	background $wp fill #222222
}
