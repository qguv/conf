# change prefix to ^A
unbind C-b
set -g prefix C-a
bind C-a send-prefix

# statusbar colors
set -g status-bg black
set -g status-fg white

# toggle statusbar with '^A b'
bind b set-option -g status

set -g default-terminal screen-256color
set -sg escape-time 1 #ms after esc is pressed to interpret keys as meta+key
