" vim:syn=vim

" Vundle boilerplate: don't edit this paragraph
set nocompatible
filetype off
set rtp+=$XDG_CONFIG_HOME/vim/vundle/
call vundle#begin()
Plugin 'gmarik/Vundle.vim'

" generic bundles
Plugin 'tpope/vim-surround'
Plugin 'tpope/vim-repeat'
Plugin 'yaifa.vim' " automatic indentation

" color schemes
Plugin 'altercation/vim-colors-solarized'

" external tool interfaces
Plugin 'tpope/vim-fugitive' " git
Plugin 'majutsushi/tagbar'  " ctags
Plugin 'rizzatti/dash.vim'  " Dash.app (mac-only)

" python bundles
Plugin 'tell-k/vim-autopep8'      " style formatter, uses PEP8
Plugin 'ehamberg/vim-cute-python' " unicode conceals

" js & derivatives
Plugin 'jelera/vim-javascript-syntax'
Plugin 'kchmck/vim-coffee-script'
Plugin 'JavaScript-Indent'

" go
Plugin 'fatih/vim-go'

" haskell
Plugin 'dag/vim2hs'

" haxe
Plugin 'jdonaldson/vaxe'

" misc
Plugin 'tpope/vim-markdown'
Plugin 'ingydotnet/yaml-vim'
Plugin 'ebnf.vim'

" Vundle boilerplate: don't edit this paragraph
call vundle#end()
filetype plugin indent on
