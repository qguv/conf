color index color214 default ~O

# incoming
set imap_user = "quintus.public@gmail.com"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set postpone = yes

# composing
set record = "+[Gmail]/Sent Mail"
set copy = yes
set edit_headers

# outgoing
set smtp_url = "smtps://quint@guvernator.net@sub4.mail.dreamhost.com:465/"
set from = "quint@guvernator.net"
set realname = "Quint Guvernator"
set certificate_file = "~/.config/mutt/certificates"

# viewing
set move = no
set sort = threads # default sort messages by thread
set sort_aux = last-date-received # showing threads with youngest message last
set sort_browser = reverse-date # showing mbox list default to newest first
