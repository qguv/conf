color index color214 default ~O

# incoming
set imap_user = "quint@guvernator.net"
set spoolfile = "imaps://mail.privateemail.com:993"
set folder = "imaps://mail.privateemail.com:993/INBOX"
set postponed = "+Drafts"
set postpone = yes

# composing
set copy = yes # save copies of outgoing mail to $record folder
set record = "+Sent"
set edit_headers # show headers when editing mail

# outgoing
set smtp_url = "smtps://quint@guvernator.net@mail.privateemail.com:465/"
set from = "quint@guvernator.net"
set realname = "Quint Guvernator"
set certificate_file = "~/.config/mutt/certificates"

# don't leak hostname in Message-ID
set hostname = "guvernator.net"

# viewing
set move = no
set sort = threads # default sort messages by thread
set sort_aux = last-date-received # showing threads with youngest message last
set sort_browser = reverse-date # showing mbox list default to newest first
set thorough_search = yes # fix quoted-printable emails
